#!/usr/bin/env python

#import signal
#signal.signal(signal.SIGINT, signal.SIG_DFL)

import logging
import sys

from PyQt4 import QtGui

from xpaxs.frontends.xfs import mainwindow

# TODO: this would be handled differently through the envisage framework:
from xpaxs.frontends.base.application import XpaxsApplication

app = XpaxsApplication(sys.argv)
app.setOrganizationName('XPaXS')
app.setApplicationName('SFXM')
myapp = mainwindow.MainWindow()
myapp.show()

logger = logging.getLogger('XPaXS.sxfm')
logger.debug('sxfm started')

sys.exit(app.exec_())
